{
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "images": {
    "domains": ["firebasestorage.googleapis.com", "lh3.googleusercontent.com"],
    "formats": ["image/webp", "image/avif"]
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
